{
  "name": "human-api",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:ui": "vitest",
    "test:cov": "vitest run --coverage",
    "test:perf": "vitest run --reporter=verbose --run core/**/*.perf.test.ts",
    "test:watch": "vitest --watch",
    "test:debug": "vitest --inspect-brk",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "npm run build:core && npm run build:desktop",
    "build:core": "tsc --build",
    "build:desktop": "cd apps/desktop && npm run build",
    "dev": "npm run dev:desktop",
    "data:small": "node -e \"require('fs').createReadStream('data/small/memories.jsonl').on('data',()=>{}); console.log('small dataset present')\"",
    "data:gen": "node scripts/generate-dataset.cjs 200",
    "health": "node scripts/health-check.js",
    "monitor": "npm run health && npm run test:perf",
    "build:prod": "node scripts/build-production.js",
    "build:all": "npm run build:core && npm run build:desktop && npm run build:prod",
    "dev:desktop": "cd apps/desktop && npm run tauri dev",
    "clean": "npm run clean:core && npm run clean:desktop",
    "clean:core": "rm -rf dist",
    "clean:desktop": "cd apps/desktop && npm run clean"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "argon2-browser": "^1.18.0",
    "zod": "^4.1.12"
  }
}
